<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ForecastFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/forecastIconId"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/forecastTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forecastIconId"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Temp: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/forecastDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forecastTemp"
                android:layout_marginLeft="10dp"
                android:text="Monday, Nov. 2017" />

            <TextView
                android:id="@+id/forecastHighText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forecastDateText"
                android:layout_centerHorizontal="true"
                android:text="High:"
                android:layout_toEndOf="@id/forecastDateText"
                android:textSize="15sp"
                android:layout_toRightOf="@id/forecastDateText" />

            <TextView
                android:id="@+id/forecastLowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forecastDateText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/forecastHighText"
                android:text="Low:"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forecastDescriptionText"
                android:layout_below="@id/forecastHighText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Mostly Cloudy"
                android:textSize="15sp"
                android:textStyle="italic"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>